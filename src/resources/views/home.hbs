<h1>HOME PAGE</h1>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            {{#each columnName}}
            <th scope="col">{{this}}</th>
            {{/each}}
            <th>action</th>
        </tr>
    </thead>
    <tbody>
        {{#each dataUser}}
        <tr>
            <th scope="row">{{this.id}}</th>
            <td>{{this.name}}</td>
            <td>{{this.email}}</td>
            <td>{{this.password}}</td>
            <td>{{this.image}}</td>
            <td>{{this.gender}}</td>
            <td>{{this.remember}}</td>
            <td class="d-inline-flex justify-content-start">
                <button type="submit" class="btn btn-primary m-1">Edit</button>
                <form action="/deleteUser" method="POST">
                    <input type="text" hidden value={{this.id}} name="id">
                    <button type="submit" onclick="confirmDelete(event)" class="btn btn-primary m-1">Delete</button>
                </form>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>